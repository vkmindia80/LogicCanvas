{
  "name": "Time-Off Request (Basic)",
  "description": "Simple time-off request with direct manager approval",
  "category": "Human Resources",
  "tags": ["hr", "leave", "time-off", "simple"],
  "complexity": "simple",
  "estimatedSetupTime": "3 minutes",
  "estimatedDuration": "2-4 hours",
  "icon": "calendar",
  "useCases": ["Vacation request", "Sick leave", "Personal time off"],
  "prerequisites": [],
  "integrationRequirements": [],
  "nodes": [
    {
      "id": "start-1",
      "type": "start",
      "position": {"x": 100, "y": 200},
      "data": {
        "label": "Start Request",
        "description": "Employee initiates time-off request"
      }
    },
    {
      "id": "form-1",
      "type": "form",
      "position": {"x": 300, "y": 200},
      "data": {
        "label": "Time-Off Request Form",
        "description": "Enter time-off details",
        "formFields": [
          {"id": "employee_name", "label": "Employee Name", "type": "text", "required": true},
          {"id": "start_date", "label": "Start Date", "type": "date", "required": true},
          {"id": "end_date", "label": "End Date", "type": "date", "required": true},
          {"id": "leave_type", "label": "Leave Type", "type": "dropdown", "required": true, "options": ["Vacation", "Sick Leave", "Personal"]},
          {"id": "reason", "label": "Reason", "type": "textarea", "required": false}
        ]
      }
    },
    {
      "id": "approval-1",
      "type": "approval",
      "position": {"x": 500, "y": 200},
      "data": {
        "label": "Manager Approval",
        "description": "Manager reviews and approves",
        "approvers": ["manager@company.com"],
        "approvalType": "single"
      }
    },
    {
      "id": "decision-1",
      "type": "decision",
      "position": {"x": 700, "y": 200},
      "data": {
        "label": "Approved?",
        "conditions": [
          {"condition": "${approval-1.status} == 'approved'", "label": "Yes", "targetId": "task-1"},
          {"condition": "${approval-1.status} == 'rejected'", "label": "No", "targetId": "end-2"}
        ]
      }
    },
    {
      "id": "task-1",
      "type": "task",
      "position": {"x": 900, "y": 100},
      "data": {
        "label": "Update Calendar",
        "description": "Add time-off to calendar",
        "assignee": "hr@company.com"
      }
    },
    {
      "id": "end-1",
      "type": "end",
      "position": {"x": 1100, "y": 100},
      "data": {
        "label": "Approved",
        "description": "Time-off approved and scheduled"
      }
    },
    {
      "id": "end-2",
      "type": "end",
      "position": {"x": 900, "y": 300},
      "data": {
        "label": "Rejected",
        "description": "Request denied"
      }
    }
  ],
  "edges": [
    {"id": "e1", "source": "start-1", "target": "form-1"},
    {"id": "e2", "source": "form-1", "target": "approval-1"},
    {"id": "e3", "source": "approval-1", "target": "decision-1"},
    {"id": "e4", "source": "decision-1", "target": "task-1"},
    {"id": "e5", "source": "decision-1", "target": "end-2"},
    {"id": "e6", "source": "task-1", "target": "end-1"}
  ]
}