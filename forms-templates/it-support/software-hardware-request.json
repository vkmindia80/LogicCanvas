{
  "id": "software-hardware-request",
  "name": "Software/Hardware Request Form",
  "description": "Request new software licenses or hardware equipment",
  "category": "it-support",
  "icon": "Laptop",
  "version": 1,
  "tags": ["it", "hardware", "software", "equipment"],
  "fields": [
    {
      "id": "requester_name",
      "type": "text",
      "label": "Requester Name",
      "required": true
    },
    {
      "id": "requester_email",
      "type": "email",
      "label": "Requester Email",
      "required": true
    },
    {
      "id": "department",
      "type": "text",
      "label": "Department",
      "required": true
    },
    {
      "id": "request_type",
      "type": "radio",
      "label": "Request Type",
      "required": true,
      "options": ["Hardware", "Software", "Both"]
    },
    {
      "id": "item_name",
      "type": "text",
      "label": "Item/Product Name",
      "required": true,
      "placeholder": "e.g., MacBook Pro, Adobe Creative Suite"
    },
    {
      "id": "quantity",
      "type": "number",
      "label": "Quantity Needed",
      "required": true,
      "validation": {
        "min": 1
      }
    },
    {
      "id": "purpose",
      "type": "radio",
      "label": "Purpose",
      "required": true,
      "options": ["New Employee", "Replacement", "Upgrade", "New Project", "Other"]
    },
    {
      "id": "business_justification",
      "type": "textarea",
      "label": "Business Justification",
      "required": true,
      "placeholder": "Explain why this item is needed"
    },
    {
      "id": "specifications",
      "type": "textarea",
      "label": "Specifications/Requirements",
      "required": false,
      "placeholder": "Any specific technical requirements?"
    },
    {
      "id": "estimated_cost",
      "type": "number",
      "label": "Estimated Cost (USD)",
      "required": false,
      "validation": {
        "min": 0
      }
    },
    {
      "id": "urgency",
      "type": "radio",
      "label": "Urgency",
      "required": true,
      "options": ["Immediate (1-3 days)", "Soon (1 week)", "Normal (2-3 weeks)", "Future Planning"]
    },
    {
      "id": "needed_by_date",
      "type": "date",
      "label": "Needed By Date",
      "required": true
    },
    {
      "id": "budget_approved",
      "type": "radio",
      "label": "Budget Approval Status",
      "required": true,
      "options": ["Already Approved", "Pending Approval", "Not Yet Submitted"]
    }
  ]
}